FROM eclipse-temurin:17-jdk-alpine
RUN  \
     # Install json utilities for config.json
     apk add --no-cache npm git && npm install --unsafe-perm -g json curl

# Sweet Home Alabama :)
WORKDIR /home

# EXPOSE Web (https) and Game Server
EXPOSE 443 22102

# Copy files Grasscutter (v4)
COPY work ./Grasscutter
#RUN ls -a && ls work -a

# Rock
COPY entrypoint.sh .
HEALTHCHECK --interval=30s --timeout=10s \
  CMD curl --fail --insecure https://localhost || exit 1  
ENTRYPOINT ["sh", "entrypoint.sh"]